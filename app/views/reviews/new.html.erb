<div class="container col-6">
<h1>Write a review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<p class="p-3">
  <%= link_to restaurant_path(@restaurant) do%>
      <i class="fas fa-arrow-alt-circle-left"> Back to Lists</i>
  <% end %>
</p>
</div>
